{
  "$schema": "https://raw.githubusercontent.com/neoradar-project/schemas/refs/heads/main/systems/labels.schema.json",
  "ground": {
    "default": [
      [
        {
          "itemName": "callsign",
          "prefix": ["=assumedPrefix"],
          "fontWeight": "bold",
          "fontSize": 12
        },
        {
          "itemName": "squawk",
          "prefix": "@"
        }
      ]
    ],
    "departure": [
      [
        {
          "itemName": "callsign",
          "prefix": ["=assumedPrefix"],
          "fontWeight": "bold",
          "fontSize": 12,
          "color": "=incorrectSquawkRedColor"
        },
        {
          "itemName": "text",
          "value": "=penWhenScratchpadNotEmpty",
          "fontSize": 12,
          "fontWeight": "bold"
        },
        {
          "itemName": "acShortType",
          "placeholder": "ATYP"
        }
      ],
      [
        {
          "itemName": "text",
          "placeholder": "RWY",
          "value": ["=suggestedDepRunwayIfNoAssigned", "&depRunway"]
        },
        {
          "itemName": "text",
          "placeholder": "SID",
          "value": ["=suggestedSidIfNoAssigned", "&sid"]
        }
      ]
    ],
    "arrival": [
      [
        {
          "itemName": "callsign",
          "prefix": ["=assumedPrefix"],
          "fontWeight": "bold",
          "fontSize": 12
        },
        {
          "itemName": "acShortType",
          "placeholder": "ATYP"
        }
      ],
      [
        {
          "itemName": "scratchpad"
        }
      ]
    ],
    "detailed": [
      [
        {
          "itemName": "callsign",
          "fontWeight": "bold",
          "leftClick": "callsignMenu",
          "prefix": ["=assumedPrefix"],
          "fontSize": 12

        },
        {
          "itemName": "squawk",
          "prefix": "@"
        }
      ]
    ],
    "departureDetailed": [
      [
        {
          "itemName": "callsign",
          "fontWeight": "bold",
          "fontSize": 12,
          "leftClick": "callsignMenu",
          "prefix": ["=assumedPrefix"],
          "color": "=incorrectSquawkRedColor"
        },
        {
          "itemName": "acShortType",
          "placeholder": "ATYP",
          "leftClick": "fpDialog"
        }
      ],
      [
        {
          "itemName": "text",
          "placeholder": "RWY",
          "value": ["=suggestedDepRunwayIfNoAssigned", "&depRunway"],
          "leftClick": "depRunwayMenu"
        },
        {
          "itemName": "text",
          "placeholder": "SID",
          "value": ["=suggestedSidIfNoAssigned", "&sid"],
          "leftClick": "sidMenu"
        }
      ],
      [
        {
          "itemName": "scratchpad",
          "leftClick": "triggerScratchpad",
          "placeholder": "..."
        }
      ]
    ],
    "arrivalDetailed": [
      [
        {
          "itemName": "callsign",
          "fontWeight": "bold",
          "fontSize": 12,
          "leftClick": "callsignMenu",
          "prefix": ["=assumedPrefix"]
        },
        {
          "itemName": "acShortType",
          "placeholder": "ATYP",
          "leftClick": "fpDialog"
        }
      ],
      [
        {
          "itemName": "scratchpad",
          "placeholder": "...",
          "leftClick": "triggerScratchpad"
        }
      ]
    ],
    "styleVariants": [
      {
        "applyWhen": "$isOutboundTransfer",
        "backgroundColor": [34, 117, 78],
        "textColor": [255, 255, 255],
        "fontSize": 11,
        "tagContainerPaddingBottom": 1,
        "tagContainerPaddingTop": 1,
        "tagContainerPaddingLeft": 1,
        "tagContainerPaddingRight": 1,
        "detailedTagContainerPaddingBottom": 1,
        "detailedTagContainerPaddingTop": 1,
        "detailedTagContainerPaddingLeft": 1,
        "detailedTagContainerPaddingRight": 1
      },
      {
        "applyWhen": "$isInboundTransfer",
        "backgroundColor": [50, 170, 104],
        "textColor": [255, 255, 255],
        "fontSize": 11,
        "tagContainerPaddingBottom": 1,
        "tagContainerPaddingTop": 1,
        "tagContainerPaddingLeft": 1,
        "tagContainerPaddingRight": 1,
        "detailedTagContainerPaddingBottom": 1,
        "detailedTagContainerPaddingTop": 1,
        "detailedTagContainerPaddingLeft": 1,
        "detailedTagContainerPaddingRight": 1
      },
      {
        "applyToIsDeparture": true,
        "backgroundColor": [40, 50, 200],
        "textColor": [255, 255, 255],
        "fontSize": 11,
        "tagContainerPaddingBottom": 1,
        "tagContainerPaddingTop": 1,
        "tagContainerPaddingLeft": 1,
        "tagContainerPaddingRight": 1,
        "detailedTagContainerPaddingBottom": 1,
        "detailedTagContainerPaddingTop": 1,
        "detailedTagContainerPaddingLeft": 1,
        "detailedTagContainerPaddingRight": 1
      },
      {
        "applyToIsArrival": true,
        "backgroundColor": [170, 50, 50],
        "textColor": [255, 255, 255],
        "fontSize": 11,
        "tagContainerPaddingBottom": 1,
        "tagContainerPaddingTop": 1,
        "tagContainerPaddingLeft": 1,
        "tagContainerPaddingRight": 1,
        "detailedTagContainerPaddingBottom": 1,
        "detailedTagContainerPaddingTop": 1,
        "detailedTagContainerPaddingLeft": 1,
        "detailedTagContainerPaddingRight": 1
      },
      {
        "applyToIsDeparture": true,
        "backgroundColor": [40, 50, 200],
        "textColor": [255, 255, 255],
        "fontSize": 11,
        "tagContainerPaddingBottom": 1,
        "tagContainerPaddingTop": 1,
        "tagContainerPaddingLeft": 1,
        "tagContainerPaddingRight": 1,
        "detailedTagContainerPaddingBottom": 1,
        "detailedTagContainerPaddingTop": 1,
        "detailedTagContainerPaddingLeft": 1,
        "detailedTagContainerPaddingRight": 1
      },
      {
        "backgroundColor": [48, 48, 48],
        "textColor": [255, 255, 255],
        "fontSize": 11,
        "tagContainerPaddingBottom": 1,
        "tagContainerPaddingTop": 1,
        "tagContainerPaddingLeft": 1,
        "tagContainerPaddingRight": 1,
        "detailedTagContainerPaddingBottom": 1,
        "detailedTagContainerPaddingTop": 1,
        "detailedTagContainerPaddingLeft": 1,
        "detailedTagContainerPaddingRight": 1
      }
    ]
  },
  "airborne": {
    "unconcerned": [
      [
        {
          "itemName": "groundSpeed",
          "padWithZeroLeft": 3,
          "truncate": [0, 2]
        },
        {
          "itemName": "text",
          "value": "=penWhenScratchpadNotEmpty",
          "color": "=blueColorScratchpadNotEmpty"
        }
      ],
      [
        {
          "itemName": "callsign",
          "leftClick": "callsignMenu"
        }
      ],
      [
        {
          "itemName": "computedAltitude",
          "prefix": ["=altitudeBelowTAPrefix"],
          "truncate": ["=altitudeBelowTATruncate", "=altitudeAboveTATruncate"],
          "padWithZeroLeft": 5
        },
        {
          "itemName": "verticalTrend",
          "placeholder": ":i\ue11f",
          "mapping": {
            "1": ":i\ue051",
            "0": ":i\ue11f",
            "-1": ":i\ue049"
          }
        }
      ]
    ],
    "concerned": [
      [
        {
          "itemName": "groundSpeed",
          "padWithZeroLeft": 3,
          "truncate": [0, 2]
        },
        {
          "itemName": "assignedMach",
          "padWithZeroLeft": 3,
          "truncate": [0, 3],
          "prefix": "m"
        },
        {
          "itemName": "computedSpeed",
          "prefix": "k"
        },
        {
          "itemName": "text",
          "value": "=penWhenScratchpadNotEmpty",
          "color": "=blueColorScratchpadNotEmpty"
        }
      ],
      [
        {
          "itemName": "callsign",
          "leftClick": "callsignMenu"
        }
      ],
      [
        {
          "itemName": "computedAltitude",
          "prefix": ["=altitudeBelowTAPrefix"],
          "truncate": ["=altitudeBelowTATruncate", "=altitudeAboveTATruncate"],
          "padWithZeroLeft": 5
        },
        {
          "itemName": "verticalTrend",
          "placeholder": ":i\ue11f",
          "mapping": {
            "1": ":i\ue051",
            "0": ":i\ue11f",
            "-1": ":i\ue049"
          }
        },
        {
          "itemName": "clearedFlightLevel",
          "padWithZeroLeft": 5,
          "truncate": [0, 2],
          "mapping": {
            "1": "CA",
            "2": "VA"
          }
        },
        {
          "itemName": "assignedDirect",
          "leftClick": "triggerScratchpad"
        },
        {
          "itemName": "assignedHeading",
          "padWithZeroLeft": 3,
          "truncate": [0, 3],
          "prefix": "h"
        }
      ]
    ],
    "detailed": [
      [
        {
          "itemName": "groundSpeed",
          "padWithZeroLeft": 3,
          "truncate": [0, 2]
        },
        {
          "itemName": "assignedMach",
          "padWithZeroLeft": 3,
          "truncate": [0, 3],
          "prefix": "m",
          "leftClick": "spd",
          "rightClick": "clearSpd"
        },
        {
          "itemName": "computedSpeed",
          "prefix": "k",
          "placeholder": "k..",
          "leftClick": "spd",
          "rightClick": "clearSpd"
        },
        {
          "itemName": "scratchpad",
          "placeholder": ":i\ue4f4",
          "color": "=blueColorScratchpadNotEmpty",
          "leftClick": "triggerScratchpad"
        },
        {
          "itemName": "verticalSpeed",
          "padWithZeroLeft": 4,
          "truncate": [0, 3],
          "showPlusMinus": true
        },
        {
          "itemName": "acShortType"
        }
      ],
      [
        {
          "itemName": "callsign",
          "leftClick": "callsignMenu"
        },
        {
          "itemName": "ownedByID",
          "placeholder": "---"
        },
        {
          "itemName": "plannedFlightLevel",
          "padWithZeroLeft": 5,
          "truncate": [0, 2],
          "placeholder": "TaFL",
          "leftClick": "pfl"
        }
      ],
      [
        {
          "itemName": "computedAltitude",
          "prefix": ["=altitudeBelowTAPrefix"],
          "truncate": ["=altitudeBelowTATruncate", "=altitudeAboveTATruncate"],
          "padWithZeroLeft": 5,
          "leftClick": "routeDraw"
        },
        {
          "itemName": "verticalTrend",
          "placeholder": ":i\ue11f",
          "mapping": {
            "1": ":i\ue051",
            "0": ":i\ue11f",
            "-1": ":i\ue049"
          }
        },
        {
          "itemName": "clearedFlightLevel",
          "padWithZeroLeft": 5,
          "truncate": [0, 2],
          "mapping": {
            "1": "CA",
            "2": "VA"
          },
          "placeholder": "cfl",
          "leftClick": "cfl"
        },
        {
          "itemName": "assignedDirect",
          "leftClick": "directMenu",
          "rightClick": "triggerScratchpad"
        },
        {
          "itemName": "assignedHeading",
          "padWithZeroLeft": 3,
          "truncate": [0, 3],
          "placeholder": "h...",
          "prefix": "h",
          "leftClick": "hdg",
          "rightClick": "directMenu"
        }
      ],
      [
        {
          "itemName": "reportedHeading",
          "padWithZeroLeft": 3,
          "truncate": [0, 3],
          "placeholder": "@h...",
          "prefix": "@h"
        }
      ],
      [
        {
          "itemName": "origin",
          "placeholder": "ORIG",
          "leftClick": "fpDialog"
        },
        {
          "itemName": "destination",
          "placeholder": "DEST",
          "leftClick": "fpDialog"
        }
      ]
    ],
    "styleVariants": [
      {
        "textColor": [97, 98, 100],
        "textColorForState": {
          "kAssumed": [246, 246, 246],
          "kIncomingTransfer": [190, 225, 191],
          "kIntruder": [94, 175, 180],
          "kNotified": [175, 201, 128],
          "kOutgoingTransfer": [94, 175, 180]
        },
        "detailedBackgroundColor": [20, 20, 20],
        "detailedBackgroundColorOpacity": 0.8,
        "detailedRoundedCorners": 5
      }
    ]
  }
}
